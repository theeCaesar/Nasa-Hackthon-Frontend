        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/resources",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "resources"]
        }
      },
      "response": []
    },
    {
      "name": "Delete a resource",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/resources/{{resourceId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "resources", "{{resourceId}}"]
        }
      },
      "response": []
    },
    {
