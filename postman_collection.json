      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"visitor@example.com\",\n  \"message\": \"I love this project!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/contact",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "contact"]
        }
      },
      "response": []
    },
    {
      "name": "Send contact message (authenticated)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"Please add more plant biology papers.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/contact",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "contact"]
        }
      },
      "response": []
    }
